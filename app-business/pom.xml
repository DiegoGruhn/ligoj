<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.ligoj.bootstrap</groupId>
		<artifactId>bootstrap-business-parent</artifactId>
		<version>1.6.0</version>
		<relativePath />
	</parent>

	<groupId>org.ligoj.app</groupId>
	<artifactId>app-business</artifactId>
	<packaging>war</packaging>
	<version>1.4.21-SNAPSHOT</version>
	<name>Ligoj - Business</name>

	<scm>
		<connection>scm:git:https://github.com/ligoj/ligoj.git</connection>
		<developerConnection>scm:git:https://github.com/ligoj/ligoj.git</developerConnection>
		<url>https://github.com/ligoj/ligoj</url>
	</scm>
	<properties>
		<api.version>1.0.2</api.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.ligoj.api</groupId>
			<artifactId>plugin-iam-empty</artifactId>
			<version>${api.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.ligoj.api</groupId>
			<artifactId>plugin-api-test</artifactId>
			<version>${api.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.ligoj.api</groupId>
			<artifactId>plugin-core</artifactId>
			<version>${api.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>


		<!-- JSR-154 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>**/*.jar</exclude>
					<exclude>**/*.txt</exclude>
					<exclude>**/*.csv</exclude>
					<exclude>**/*.xls</exclude>
				</excludes>
			</testResource>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.jar</include>
					<include>**/*.txt</include>
					<include>**/*.csv</include>
					<include>**/*.xls</include>
				</includes>
			</testResource>
		</testResources>
	</build>

	<profiles>
		<profile>
			<id>javadoc</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-service-docs</id>
								<phase>generate-resources</phase>
								<configuration>
									<doclet>com.tenxerconsulting.swagger.doclet.ServiceDoclet</doclet>
									<docletArtifact>
										<groupId>com.tenxerconsulting</groupId>
										<artifactId>swagger-doclet</artifactId>
										<version>1.1.3</version>
									</docletArtifact>
									<reportOutputDirectory>${project.build.outputDirectory}</reportOutputDirectory>
									<useStandardDocletOptions>false</useStandardDocletOptions>
									<additionalparam>-apiVersion 1 -docBasePath http://myapi
										-apiBasePath http://myapi</additionalparam>
								</configuration>
								<goals>
									<goal>javadoc</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>eclipse-plugins</id>
			<!-- Put here the plug-ins to be resolved by your IDE -->
			<dependencies>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-iam-node</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-id</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-id-ldap</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-password-management</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-redirect</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-sso-salt</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-mail-smtp</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-vm-vcloud</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-bt-jira</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-km-confluence</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-scm-git</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-scm-svn</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-qa-sonarqube</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-build-jenkins</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-storage-owncloud</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-security-fortify</artifactId>
				</dependency>
				<dependency>
					<groupId>org.ligoj.plugin</groupId>
					<artifactId>plugin-req-squash</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>